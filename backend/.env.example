NODE_ENV=development
PORT=5000
DATABASE_URL=mysql://user:password@localhost:3306/archivo_digital_disa
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Firma Perú Configuration (Servicio de Validación)
FIRMA_PERU_API_URL=http://[IP_SERVIDOR_VALIDADOR]:8080/validador/api
FIRMA_PERU_CREDENTIAL=your-secure-credential-here
FIRMA_PERU_CLIENT_ID=your-client-id
FIRMA_PERU_CLIENT_SECRET=your-client-secret
FIRMA_PERU_TOKEN_URL=https://apps.firmaperu.gob.pe/admin/api/security/generate-token

# Firma Perú Componente Web Configuration
# URL base para el componente web de Firma Perú (donde se aloja firmaperu.min.js)
FIRMA_PERU_CLIENT_WEB_URL=https://apps.firmaperu.gob.pe/web/clienteweb/firmaperu.min.js
# Puerto local recomendado para el componente web de Firma Perú (48596 es el default)
FIRMA_PERU_LOCAL_SERVER_PORT=48596
# URL base de tu backend para las callbacks de Firma Perú
# Ejemplo: http://localhost:5000/api/firma
FIRMA_PERU_BACKEND_BASE_URL=http://localhost:5000/api/firma
# Secreto para generar tokens de un solo uso para Firma Perú
FIRMA_PERU_ONE_TIME_TOKEN_SECRET=your-one-time-token-secret
