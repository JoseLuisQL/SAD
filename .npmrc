# Configuración de npm para el proyecto SAD
# Asegura reproducibilidad en los builds

# Usar lock file exacto
package-lock=true

# No permitir que npm modifique el package.json automáticamente
save-exact=true

# Registros de instalación más verbosos para debugging
loglevel=info

# Motor de Node.js requerido (se valida contra engines en package.json)
engine-strict=true

# Timeout para instalaciones (útil en conexiones lentas)
fetch-timeout=60000

# No enviar analytics a npm
fund=false
audit=true
